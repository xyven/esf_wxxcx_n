<!--pages/person/person.wxml  dobindagent-->
<import src="../templates.wxml"/>
<view wx:if='{{dobindagent}}' class='binddialog'>
  <form bindsubmit='bindagent'>
    <label>请输入在房天下注册的id:</label>
    <input name='agentid' placeholder='请输id' type='text'></input>
    <label>请输入在房天下注册的真实姓名:</label>
    <input name='name' placeholder='请输入完整姓名' type='text'></input>
    <label>请输入在房天下注册的手机号码:</label>  
    <input name='telno' placeholder='请输入电话号码' type='text'></input>
    <label>请输入邀请码:</label>  
    <input name='code' placeholder='请输入邀请码' type='text'></input>
    <button form-type='submit' size='mini' >绑定</button>
    <button size='mini' bindtap='nobind' >返回</button>
  </form>
</view>
<view style='background-color: #f5f5f5'>
  <view class='header-container '>
    <image src='{{userInfo.avatarUrl}}'></image>
    <text>{{userInfo.nickName}}</text>
    <button wx:if="{{identity=='游客'}}" class='btn' size='mini' bindtap='tobindagent'>中介绑定</button>
    <!-- 测试身份
    <text wx:if="{{identity=='中介'}}">身份:中介</text>
    <text wx:if="{{identity=='游客'}}">身份:用户</text>
    -->
  </view>
  <view class='navigate-contariner-p'>
    <view bindtap='toback'>
      <image src='../icon/fang.png'></image>
      <text class="{{'nav-text-normal'}}">返回</text>
    </view>
    <view  bindtap='getfootprint'>
      <image src='../icon/zuji.png'></image>
      <text class='nav-text-normal'>足迹</text>
    </view>
    <view wx:if="{{identity=='中介'}}" bindtap='getRegRecord'>
      <image src='../icon/hr.png'></image>
      <text class='nav-text-normal'>委托</text>
    </view>
    <view wx:if="{{identity=='游客'}}">
      <!--推进，待大数据成立后开发
      <image src='../icon/wymf.png'></image>
      <text class='nav-text-normal'>推荐</text> a-->
    </view>
    <view>
    </view>
    <!-- 设置 以后开发
    <view wx:if='{{isbindagent}}'>
      <image src='../icon/dpsz.png'></image>
      <text class='nav-text-normal'>设置</text>
    </view> 
    -->
  </view>
  <scroll-view class="sv"  scroll-y="true"  scroll-with-animation="true">
  <!--登记房源-->
  <view class='footprint-list' wx:if="{{regrecords.length>0 && maincontent=='regrecord'}}" wx:for="{{regrecords}}" wx:key="id" id="{{index}}">
  <template is="regrecord" data="{{item}}"/>
  </view>
  <!--浏览足迹-->
  <view class='footprint-list' wx:if="{{footprint.length>0 && maincontent=='footprint'}}" wx:for="{{footprint}}" wx:key="id" id="{{index}}" bindtap='onhtmletitem'>
  <template is="footprint" data="{{item}}"/>
  </view>
  <!--微店设置-->
  </scroll-view>
</view>
