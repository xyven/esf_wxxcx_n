/*小程序所有样式集中管理*/
.header-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.header-container text{
  font-size: 30rpx;
  margin-left: 20rpx;
}

.header-container image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.navigate-contariner{
  position: fixed;
  z-index: 2;
  width: 100%;
  top: 0rpx;
  left: -1rpx;
  background-color: #fff;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.navigate-contariner view{
  display: flex;
  flex-direction: column;
  text-align: center;
}

.navigate-contariner view image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.nav-text-normal{
  font-size: 25rpx;
  width: 60rpx;
  color: #000;
  vertical-align: middle;
}

.nav-text-checked{
  font-size: 25rpx;
  width: 60rpx;
  color: #d81e06;
  vertical-align: middle;
}