/* pages/agentshop/agentshop.wxss */

.sv{
  position: relative;
  flex: auto; 
  width: 100%;
  height: 1300rpx;
  background-color: #f5f5f5;  
}

.swiper_box{
  width: 100%;
  height: 450rpx;
}

swiper-item image {
    width: 100%;
    height: 450rpx;
    display: inline-block;
    overflow: hidden;
}

swiper-item text{
  position: absolute;
  top: 300rpx;
  left: 10rpx;
  color: #CC3333;
  text-shadow:-1px 0 white,
                0 1px white,
                1px 0 white,
                0 -1px white;
}

.label-container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.search-container{
  display: flex;
  flex-direction: row;
  border: 1rpx solid #929292;
  width: 100%;
  justify-content: center;
  align-items:Center;
}

.search-container label{  
  font-size: 30rpx;
  color: #f39d00;
  margin-left: 10rpx;
  width: 180rpx;
}

.search-input-container{
  overflow: hidden;
  width: 100%;
}

.search-container input{  
   font-size: 25rpx;
}

.search-container icon{
  margin-right: 10rpx;
}

.label-select-n{
  display: flex;
  justify-content: center;
  align-items:Center;
  height: 40rpx;
  border: 1rpx dashed #929292;
  border-radius: 50rpx;
  text-align: center;
  vertical-align: middle;
  font-size: 25rpx;
  margin: 10rpx auto auto 10rpx;
  padding: 0rpx 5rpx 0rpx 5rpx;
}

.label-select-c {
  display: flex;
  justify-content: center;
  align-items:Center;
  height: 40rpx;
  border: 2rpx solid #09bb07;
  border-radius: 50rpx;
  text-align: center;
  vertical-align: middle;
  font-size: 25rpx;
  margin: 10rpx auto auto 10rpx;
  padding: 0rpx 5rpx 0rpx 5rpx;
}



.lable-img{
  position: absolute;
  top: -1rpx;
  right: -1rpx;
  width: 100rpx;
  height: 100rpx;
}

view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px 10px 10px 12px;
    font-size: 18px;
    color: #656565;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}

.flag-container{
  margin-top: 10rpx;
  background-color: #fff;
}

.flag-img{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  margin-left: 10rpx;
  margin-bottom: 8rpx;
  vertical-align: middle;
}
.flag-text{
  font-size: 35rpx;

}
.housetolet-list{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.htl-item{
  display: flex;
  flex-direction: row;
  margin-top: 16rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
}
.htl-mimg{
  width: 280rpx;
  height: 280rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.htl-mimg-lable{
  position:absolute;
  top: 10rpx;
  right: -1rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
}
.htl-txtinfo{
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 5rpx;
}
.htl-title{
  font-size: 18px;
  font-weight: bold;
  line-height: 22px; 
}
.htl-info{
  font-size: 12px;
  line-height: 16px; 
}
.htl-price{
  font-size: 14px;
  line-height: 22px; 
  color: red;
}
.htl-uptm{
  font-size: 12px;
  color: #929292;
  line-height: 16px; 
}
.tabbar{
  position: fixed;
  bottom: 208rpx;
  right: 22rpx;
  height: 300rpx;
  flex-direction: column;
  display: flex;
  justify-content: space-between;  
}


.css_btn{
  width: 70rpx;
  height: 70rpx;
}

.css_btn image{
  width: 70rpx;
  height: 70rpx;
}

.btn_img_d{
  width: 70rpx;
  height: 70rpx;
}

.qrcode{
  width: 129px;
  height: 129px;
}

.loading{  
  padding: 10rpx;  
  text-align: center; 
  font-size: 30rpx; 
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;   
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none; 
} 