/* pages/person/person.wxss */
@import '../intensive.wxss';
@import "../templates.wxss";
.binddialog{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 2;
  background-color: #ddd;
  opacity: 0.95;
  display: flex;
  flex-direction: column;
  padding-top: 50rpx;
}

.binddialog form{
  padding-left: 50rpx;
}

.binddialog view{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.binddialog label{
  font-size: 25rpx;
}

.binddialog input{
    width: 300rpx;
    background-color: #fff;
    font-size: 25rpx;
}

.binddialog button{
  background-color:#f39d00;
  margin-left:20rpx;
  margin-top:20rpx;
}

.header-container{
  padding-left: 50rpx;
}

.btn{
  background-color:#f39d00;
  margin-left:20rpx;
}

.navigate-contariner-p{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 10rpx;
  width: 100%;
  top: 0rpx;
  left: -1rpx;
  background-color: #fff;
  height: 130rpx;  
}

.navigate-contariner-p view{
  display: flex;
  flex-direction: column;
  text-align: center;
}

.navigate-contariner-p view image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.footprint-list{
  justify-content:flex-start;
}